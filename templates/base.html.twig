<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>

<header class="site-header">
    <div class="nav-container">

        <div class="nav-left">
            <img src="{{ asset('img/logoEni.png') }}" alt="Logo" class="nav-logo">
            <span class="nav-brand">Sortir.com</span>
        </div>

        {% if app.user %}
            <nav class="nav-right">
                <span class="nav-user">{{ app.user.userIdentifier }}</span>

                {% if is_granted('ROLE_ADMIN') %}
                    <a class="nav-link" href="{{ path('admin_dashboard') }}">Administration</a>
                {% endif %}

                <a class="nav-link" href="{{ path('app_login') }}">Accueil</a>
                <a class="nav-link" href="{{ path('profil_edit') }}">Mon profil</a>
                <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
            </nav>
        {% endif %}

    </div>
</header>


<main class="page-content">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</main>

<footer class="site-footer">
    <div class="container text-center">
        &copy; ENI Ecole - {{ "now"|date("Y") }}
    </div>
</footer>

{# Bootstrap JS Bundle (dropdown, modal, etc.) #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
