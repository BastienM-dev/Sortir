{% extends 'base.html.twig' %}

{% block title %}
    Modifier {{ ville.nom }} | {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Modifier la ville</h1>

    {{ form_start(villeForm) }}
    {{ form_row(villeForm.nom) }}
    {{ form_row(villeForm.codePostal) }}

    <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(villeForm) }}

    <a href="{{ path('ville_list') }}">← Retour à la liste</a>
{% endblock %}